<form action="/edit/{{post._id}}" method="POST">

  <legend>Edit Post</legend>
  <div class="mb-3">
    <label for="name" class="form-label">Recepie Name</label>
    <input
      value="{{post.name}}"
      type="text"
      name="name"
      id="recepieNameTextInput"
      class="form-control"
      placeholder="Recepie Name"
    />
  </div>
  <div class="mb-3">
    <label for="retaurant" class="form-label">Restaurant Name</label>
    <input
      value="{{post.restaurant}}"
      type="text"
      name="restaurant"
      id="RestaurantNameTextInput"
      class="form-control"
      placeholder="Restaurant Name"
    />
  </div>
  <div class="input-group mb-3">
    <input type="file" class="form-control" id="inputGroupFile02" />
    <label class="input-group-text" for="inputGroupFile02">Image</label>
  </div>
  <div class="mb-3">
    <label for="disabledSelect" class="form-label">Category</label>
    <select
      class="form-select"
      name="category"
      aria-label="Default select example"
      id="categorySelect"
    >
      <option value="Select One">Select One</option>
      <option value="Meat">Meat</option>
      <option value="Chicken">Chicken</option>
      <option value="Fish">Fish</option>
      <option value="Dessert">Dessert</option>
      <option value="Salad">Salad</option>
      <option value="Fruits">Fruits</option>
      <option value="Vegetables">Vegetables</option>
      <option value="Vegan">Vegan</option>
      <option value="Vegetarian">Vegetarian</option>
      <option value="Gluten Free">Gluten free</option>
      <option value="Pasta">Pasta</option>
      <option value="Other">Other</option>
    </select>
  </div>
  <button type="submit" class="btn btn-primary">Update</button>
  <a href="/post/{{post._id}}/postDelete" class="btn btn-primary">Delete Post</a>
</form> 

//Aqui va el final comment

<div class="card" style="max-width: 540px;">
    {{#each post.comments}}
  <div class="card-header">
    {{this.user.username}}
  </div>
  <div class="card-body">
    <h5 class="card-title">Comenta:</h5>
    <p class="card-text">{{this.content}}</p>
    <a href="/post/{{this._id}}/commentDelete" class="btn btn-primary">Delete Comment</a>
  </div>
  {{/each}}
</div>

<script>
  let selectedCategory = "{{post.category}}"; 
  document.getElementById('categorySelect').value = selectedCategory;
</script>