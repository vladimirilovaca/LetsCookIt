<div class="card" style="max-width: 540px;">
    {{#each post.comments}}
  <div class="card-header">
    {{this.user.username}}
  </div>
  <div class="card-body">
    <h5 class="card-title">Comenta:</h5>
    <div>{{{this.content}}}</div>
    <a href="/post/{{this._id}}/commentDelete" class="btn btn-primary">Delete Comment</a>
  </div>
  {{/each}}
</div>

<script src="/js/tinymce/tinymce.min.js"></script>

<script>
  tinymce.init({
    selector: '#myTextarea'
  });
</script>
