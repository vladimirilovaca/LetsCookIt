<div id="main-container">
<div class="container my-4 mx-6">
<div class="card mb-3 bg-body-secondary" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{user.image}}" class="img-fluid rounded-start" alt="Profile Image">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h4 class="card-title">{{user.username}}</h4>
        <p class="card-text">{{user.bio}}</p>
        <p class="card-text"><small class="text-body-secondary">Email: {{user.email}}</small></p>
      </div>
    </div>
  </div>
</div>
</div>

<div class="container my-5">
  <div class="row row-cols-1 row-cols-md-3 g-4">
    {{#each user.posts}}
      {{>card post=this currentUser=../currentUser}}
    {{/each}}
  </div>
</div>
</div>

<style>
    #main-container {
      background-image: url('https://res.cloudinary.com/ddtg22atq/image/upload/v1705263402/Letscookit/profile-background_ultnof.jpg'); /* Reemplaza 'ruta_de_tu_imagen.jpg' con la ruta real de tu imagen */
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      min-height: 100vh; /* Ajusta la altura m√≠nima para cubrir la totalidad del viewport */
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

  </style>
