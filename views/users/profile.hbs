<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="/images/profile.jpg" class="img-fluid rounded-start" alt="Profile Image">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h4 class="card-title">{{currentUser.username}}</h4>
        <p class="card-text">{{currentUser.bio}}</p>
        <p class="card-text"><small class="text-body-secondary">Email: {{currentUser.email}}</small></p>
      </div>
    </div>
  </div>
  <a href="profile/edit/{{user._id}}" class="btn btn-success">Edit</a>
</div>

<div class="container my-5">
  <div class="row row-cols-1 row-cols-md-3 g-4">
    {{#each user.posts}}
      {{>card post=this currentUser=../currentUser}}
    {{/each}}
  </div>
</div> 


